{
  "name": "@stevent-team/totp",
  "version": "0.0.1",
  "description": "Lightweight rfc-compliant TOTP authentication library based on `crypto`",
  "repository": "https://github.com/stevent-team/totp",
  "keywords": [
    "2fa",
    "totp",
    "authentication"
  ],
  "author": "Stevent Team",
  "license": "MIT",
  "private": false,
  "files": [
    "dist"
  ],
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js"
    }
  },
  "scripts": {
    "build": "tsc -d --emitDeclarationOnly --skipLibCheck --resolveJsonModule --outDir dist && esbuild lib/main.ts --platform=node --target=node18 --format=esm --bundle --external:./node_modules/* --outfile=dist/main.js",
    "test": "vitest",
    "lint": "eslint --ext .ts ./lib",
    "ci:release": "yarn build && yarn changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "esbuild": "^0.17.4",
    "eslint": "^8.32.0",
    "typescript": "^4.9.4",
    "vitest": "^0.27.3"
  }
}
